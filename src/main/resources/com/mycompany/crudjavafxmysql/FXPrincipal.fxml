<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="640.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.crudjavafxmysql.FXPrincipalController">

   <children>

      <!-- PANEL DE CONEXIÓN -->
      <Pane layoutX="20.0" layoutY="20.0" prefHeight="240.0" prefWidth="260.0"
            style="-fx-border-color: black; -fx-background-color: #f4f4f4;">
         <children>
            <Label layoutX="10.0" layoutY="10.0" text="Host:" />
            <TextField fx:id="txthost" layoutX="90.0" layoutY="6.0" prefWidth="150.0" text="localhost"/>

            <Label layoutX="10.0" layoutY="45.0" text="Puerto:" />
            <TextField fx:id="txtpuerto" layoutX="90.0" layoutY="41.0" prefWidth="150.0" text="5432"/>

            <Label layoutX="10.0" layoutY="80.0" text="Base:" />
            <TextField fx:id="txtdb" layoutX="90.0" layoutY="76.0" prefWidth="150.0" text="busuarios"/>

            <Label layoutX="10.0" layoutY="115.0" text="Usuario:" />
            <TextField fx:id="txtuser" layoutX="90.0" layoutY="111.0" prefWidth="150.0" text="postgres"/>

            <Label layoutX="10.0" layoutY="150.0" text="Clave:" />
            <PasswordField fx:id="txtpassword" layoutX="90.0" layoutY="146.0" prefWidth="150.0" text="123456789"/>

            <Label layoutX="10.0" layoutY="185.0" text="Tabla:" />
            <TextField fx:id="txttabla" layoutX="90.0" layoutY="181.0" prefWidth="150.0" text="usuarios"/>

            <Button layoutX="90.0" layoutY="210.0" prefWidth="150.0" text="Conectar" onAction="#conectarBD"/>
         </children>
      </Pane>

      <!-- FORMULARIO DINÁMICO -->
      <ScrollPane layoutX="20.0" layoutY="280.0" prefHeight="340.0" prefWidth="260.0"
                  style="-fx-border-color: black; -fx-background-color: #f4f4f4;">
         <content>
            <VBox fx:id="formContainer" spacing="5.0">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>
            </VBox>
         </content>
      </ScrollPane>

      <!-- BOTONES CRUD -->
      <Pane layoutX="300.0" layoutY="20.0" prefHeight="80.0" prefWidth="580.0"
            style="-fx-border-color: black; -fx-background-color: #f4f4f4;">
         <children>
            <Button layoutX="20.0" layoutY="20.0" prefWidth="150.0" text="Guardar" onAction="#guardar"/>
            <Button layoutX="215.0" layoutY="20.0" prefWidth="150.0" text="Modificar" onAction="#modificar"/>
            <Button layoutX="410.0" layoutY="20.0" prefWidth="150.0" text="Eliminar" onAction="#eliminar"/>
         </children>
      </Pane>

      <!-- TABLA DE DATOS -->
      <TableView fx:id="tbDatos" layoutX="300.0" layoutY="120.0"
                 prefHeight="500.0" prefWidth="580.0"
                 onMouseClicked="#seleccionarFila"/>
   </children>
</AnchorPane>
